{
	"name": "jack-monorepo",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev:cli": "bun run --cwd apps/cli dev",
		"dev:auth": "bun run --cwd apps/auth-worker dev",
		"dev:control": "bun run --cwd apps/control-plane dev",
		"dev:dispatch": "bun run --cwd apps/dispatch-worker dev",
		"dev:telemetry": "bun run --cwd apps/telemetry-worker dev",
		"dev:binding-proxy": "bun run --cwd apps/binding-proxy-worker dev",
		"dev:mcp": "bun run --cwd apps/mcp-worker dev",
		"build": "bun run --filter '*' build",
		"lint": "biome check .",
		"format": "biome format --write .",
		"deploy:auth": "bun run --cwd apps/auth-worker deploy",
		"deploy:control": "bun run --cwd apps/control-plane deploy",
		"deploy:dispatch": "bun run --cwd apps/dispatch-worker deploy",
		"deploy:telemetry": "bun run --cwd apps/telemetry-worker deploy",
		"deploy:binding-proxy": "bun run --cwd apps/binding-proxy-worker deploy",
		"deploy:mcp": "bun run --cwd apps/mcp-worker deploy",
		"docs:dev": "vocs dev",
		"docs:build": "vocs build",
		"docs:preview": "vocs preview"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"bun-types": "latest",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"vocs": "^1.4.0"
	}
}
