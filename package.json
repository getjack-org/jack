{
	"name": "jack-monorepo",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev:cli": "bun run --cwd apps/cli dev",
		"dev:auth": "bun run --cwd apps/auth-worker dev",
		"dev:api": "bun run --cwd apps/api-worker dev",
		"build": "bun run --filter '*' build",
		"lint": "biome check .",
		"format": "biome format --write .",
		"deploy:auth": "bun run --cwd apps/auth-worker deploy",
		"deploy:api": "bun run --cwd apps/api-worker deploy",
		"docs:dev": "vocs dev",
		"docs:build": "vocs build",
		"docs:preview": "vocs preview"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"bun-types": "latest",
		"typescript": "^5.0.0",
		"wrangler": "^3.99.0"
	},
	"dependencies": {
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"vocs": "^1.4.0"
	}
}
